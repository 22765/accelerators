<pageDefinition xmlns="http://xmlns.oracle.com/adfm/uimodel" version="12.2.1.8.41" id="AnswersPageDef"
                Package="answers">
  <parameters/>
  <executables>
    <invokeAction id="initPopularAnswerReportAction" Binds="initPopularAnswerReport" Refresh="always"/>
    <invokeAction id="initSearchCriteriaAction" Binds="initSearchCriteria" Refresh="always"/>
    <invokeAction id="initProductSelectionReportAction" Binds="initProductSelectionReport"/>
    <invokeAction id="initCategorySelectionReportAction" Binds="initCategorySelectionReport"/>
    <variableIterator id="variables">
      <variable Type="java.lang.String" Name="searchSelectionFromDB_searchValue" IsQueriable="false"/>
      <variable Type="java.lang.String" Name="searchCategorySelectionFromDB_searchValue" IsQueriable="false"/>
    </variableIterator>
    <iterator Binds="root" RangeSize="15" DataControl="AnswerReportController" id="AnswerReportControllerIterator"
              Refresh="always"/>
    <accessorIterator MasterBinding="AnswerReportControllerIterator" Binds="report" RangeSize="15"
                      DataControl="AnswerReportController" BeanClass="report.ReportItem" id="reportIterator"
                      CacheResults="false" Refresh="always"/>
    <iterator Binds="root" RangeSize="25" DataControl="AnswerSearchFiltersController"
              id="AnswerSearchFiltersControllerIterator"/>
    <accessorIterator MasterBinding="AnswerSearchFiltersControllerIterator" Binds="filters" RangeSize="25"
                      DataControl="AnswerSearchFiltersController" BeanClass="answers.AnswerSearchFilters"
                      id="filtersIterator"/>
    <methodIterator Binds="searchProductSelectionFromDB.result" DataControl="ProductSelectionReportController" RangeSize="100"
                    BeanClass="report.ReportItem" id="searchProductSelectionFromDBIterator" CacheResults="false"
                    Refresh="always"/>
    <methodIterator Binds="searchCategorySelectionFromDB.result" DataControl="CategorySelectionReportController"
                    RangeSize="100" BeanClass="report.ReportItem" id="searchCategorySelectionFromDBIterator"
                    CacheResults="false" Refresh="always"/>
  </executables>
  <bindings>
    <methodAction id="toggleSpringboard" RequiresUpdateModel="true" Action="invokeMethod" MethodName="toggleSpringboard"
                  IsViewObjectMethod="false" DataControl="ApplicationFeatures"
                  InstanceName="data.ApplicationFeatures.dataProvider"/>
    <tree IterBinding="reportIterator" id="report">
      <nodeDefinition DefName="report.ReportItem" Name="report0">
        <AttrNames>
          <Item Value="attr1"/>
          <Item Value="attr2"/>
          <Item Value="attr3"/>
          <Item Value="attr4"/>
          <Item Value="id"/>
          <Item Value="attr7"/>
          <Item Value="attr8"/>
        </AttrNames>
      </nodeDefinition>
    </tree>
    <methodAction id="initPopularAnswerReport" RequiresUpdateModel="true" Action="invokeMethod" MethodName="initReport"
                  IsViewObjectMethod="false" DataControl="AnswerReportController"
                  InstanceName="data.AnswerReportController.dataProvider">
      <NamedData NDName="reportName" NDValue="AcceleratorPopularAnswerList" NDType="java.lang.String"/>
      <NamedData NDName="dataControl" NDValue="AnswerReportController" NDType="java.lang.String"/>
    </methodAction>
    <methodAction id="initProductSelectionReport" RequiresUpdateModel="true" Action="invokeMethod"
                  MethodName="initReport" IsViewObjectMethod="false" DataControl="ProductSelectionReportController"
                  InstanceName="data.ProductSelectionReportController.dataProvider">
      <NamedData NDName="reportName" NDValue="AcceleratorProductForSelect" NDType="java.lang.String"/>
      <NamedData NDName="dataControl" NDValue="ProductSelectionReportController" NDType="java.lang.String"/>
      <NamedData NDName="filterName" NDType="java.lang.String"/>
      <NamedData NDName="filterValue" NDType="java.lang.String"/>
    </methodAction>
    <methodAction id="initCategorySelectionReport" RequiresUpdateModel="true" Action="invokeMethod" MethodName="initReport"
                  IsViewObjectMethod="false" DataControl="CategorySelectionReportController"
                  InstanceName="data.CategorySelectionReportController.dataProvider">
      <NamedData NDName="reportName" NDValue="AcceleratorCategoryForSelect" NDType="java.lang.String"/>
      <NamedData NDName="dataControl" NDValue="CategorySelectionReportController" NDType="java.lang.String"/>
      <NamedData NDName="filterName" NDType="java.lang.String"/>
      <NamedData NDName="filterValue" NDType="java.lang.String"/>
    </methodAction>
    <methodAction id="initSearchCriteria" RequiresUpdateModel="true" Action="invokeMethod"
                  MethodName="initSearchCriteria" IsViewObjectMethod="false" DataControl="AnswerReportController"
                  InstanceName="data.AnswerReportController.dataProvider">
      <NamedData NDName="filters" NDValue="#{bindings.AnswerSearchFiltersControllerIterator.currentRow.dataProvider}"
                 NDType="java.lang.Object"/>
    </methodAction>
    <methodAction id="refreshFilters" RequiresUpdateModel="true" Action="invokeMethod" MethodName="refreshFilters"
                  IsViewObjectMethod="false" DataControl="AnswerSearchFiltersController"
                  InstanceName="data.AnswerSearchFiltersController.dataProvider"/>
    <methodAction id="fetchAndSetIDsFromScope" RequiresUpdateModel="true" Action="invokeMethod"
                  MethodName="fetchAndSetIDsFromScope" IsViewObjectMethod="false"
                  DataControl="AnswerSearchFiltersController"
                  InstanceName="data.AnswerSearchFiltersController.dataProvider"/>
    <methodAction id="doSearch" RequiresUpdateModel="true" Action="invokeMethod" MethodName="doSearch"
                  IsViewObjectMethod="false" DataControl="AnswerReportController"
                  InstanceName="data.AnswerReportController.dataProvider">
      <NamedData NDName="filters" NDValue="#{bindings.AnswerSearchFiltersControllerIterator.currentRow.dataProvider}"
                 NDType="java.lang.Object"/>
    </methodAction>
    <methodAction id="doCancel" RequiresUpdateModel="true" Action="invokeMethod" MethodName="doCancel"
                  IsViewObjectMethod="false" DataControl="AnswerReportController"
                  InstanceName="data.AnswerReportController.dataProvider">
      <NamedData NDName="filters" NDValue="#{bindings.AnswerSearchFiltersControllerIterator.currentRow.dataProvider}"
                 NDType="java.lang.Object"/>
    </methodAction>
    <methodAction id="doReset" RequiresUpdateModel="true" Action="invokeMethod" MethodName="doReset"
                  IsViewObjectMethod="false" DataControl="AnswerReportController"
                  InstanceName="data.AnswerReportController.dataProvider">
      <NamedData NDName="filters" NDValue="#{bindings.AnswerSearchFiltersControllerIterator.currentRow.dataProvider}"
                 NDType="java.lang.Object"/>
    </methodAction>
    <methodAction id="searchProductSelectionFromDB" RequiresUpdateModel="true" Action="invokeMethod"
                  MethodName="searchSelectionFromDB" IsViewObjectMethod="false"
                  DataControl="ProductSelectionReportController"
                  InstanceName="data.ProductSelectionReportController.dataProvider"
                  ReturnName="data.ProductSelectionReportController.methodResults.searchSelectionFromDB_ProductSelectionReportController_dataProvider_searchSelectionFromDB_result">
      <NamedData NDName="objectName" NDValue="Product" NDType="java.lang.String"/>
      <NamedData NDName="searchValue" NDValue="${bindings.searchSelectionFromDB_searchValue}"
                 NDType="java.lang.String"/>
      <NamedData NDName="isRequired" NDValue="false" NDType="boolean"/>
    </methodAction>
    <methodAction id="searchCategorySelectionFromDB" RequiresUpdateModel="true" Action="invokeMethod"
                  MethodName="searchSelectionFromDB" IsViewObjectMethod="false"
                  DataControl="CategorySelectionReportController"
                  InstanceName="data.CategorySelectionReportController.dataProvider"
                  ReturnName="data.CategorySelectionReportController.methodResults.searchSelectionFromDB_CategorySelectionReportController_dataProvider_searchSelectionFromDB_result">
      <NamedData NDName="objectName" NDValue="Category" NDType="java.lang.String"/>
      <NamedData NDName="searchValue" NDType="java.lang.String"
                 NDValue="${bindings.searchCategorySelectionFromDB_searchValue}"/>
      <NamedData NDName="isRequired" NDValue="false" NDType="boolean"/>
    </methodAction>
    <attributeValues IterBinding="variables" id="searchValueOfProduct">
      <AttrNames>
        <Item Value="searchSelectionFromDB_searchValue"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="variables" id="searchValueOfCategory">
      <AttrNames>
        <Item Value="searchCategorySelectionFromDB_searchValue"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="filtersIterator" id="product">
      <AttrNames>
        <Item Value="product"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="filtersIterator" id="category">
      <AttrNames>
        <Item Value="category"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="filtersIterator" id="phrases">
      <AttrNames>
        <Item Value="phrases"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="filtersIterator" id="similarPhrases">
      <AttrNames>
        <Item Value="similarPhrases"/>
      </AttrNames>
    </attributeValues>
    <attributeValues IterBinding="filtersIterator" id="exactSearch">
      <AttrNames>
        <Item Value="exactSearch"/>
      </AttrNames>
    </attributeValues>
    <tree IterBinding="searchProductSelectionFromDBIterator" id="productReportItem">
      <nodeDefinition DefName="report.ReportItem" Name="ReportItem0">
        <AttrNames>
          <Item Value="id"/>
          <Item Value="attr1"/>
        </AttrNames>
      </nodeDefinition>
    </tree>
    <tree IterBinding="searchCategorySelectionFromDBIterator" id="categoryReportItem">
      <nodeDefinition DefName="report.ReportItem" Name="ReportItem0">
        <AttrNames>
          <Item Value="id"/>
          <Item Value="attr1"/>
        </AttrNames>
      </nodeDefinition>
    </tree>
  </bindings>
</pageDefinition>
